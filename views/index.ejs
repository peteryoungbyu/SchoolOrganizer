<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Organizer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container py-4">
        <h1 class="text-center mb-4">School Organizer</h1>

        <div class="d-flex justify-content-center gap-2 mb-3">
            <button id="showAddAssignmentBtn" class="btn btn-primary">Add Assignment</button>
            <button id="showFiltersBtn" class="btn btn-outline-secondary">Filters</button>
        </div>

        <div class="d-flex justify-content-center mb-3">
            <form method="GET" action="/" class="form-check">
                <input class="form-check-input" type="checkbox" id="showAll" name="showAll" value="1"
                       onchange="this.form.submit()" <%= typeof showAll !== 'undefined' && showAll ? 'checked' : '' %>>
                <label class="form-check-label ms-2" for="showAll">Show All Assignments</label>
            </form>
        </div>

        <!-- Add Assignment Card (hidden by default) -->
        <div id="addAssignmentCard" class="card mb-4 mx-auto shadow-sm" style="display: none; max-width: 800px;">
            <div class="card-body">
                <h5 class="card-title">Add New Assignment</h5>
                <form action="/add-assignment" method="POST" class="row g-3">
                    <div class="col-md-6">
                        <label for="classcode" class="form-label">Class Code</label>
                        <select id="classcode" name="classcode" class="form-select" required>
                            <option value="IS 401">IS 401</option>
                            <option value="IS 413">IS 413</option>
                            <option value="IS 414">IS 414</option>
                            <option value="IS 455">IS 455</option>
                            <option value="MUSIC 312R">MUSIC 312R</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="assigntype" class="form-label">Type</label>
                        <select id="assigntype" name="assigntype" class="form-select" required>
                            <option value="Homework">Homework</option>
                            <option value="Project">Project</option>
                            <option value="Group">Group</option>
                            <option value="Reading">Reading</option>
                            <option value="Exam">Exam</option>
                            <option value="Personal/Other">Personal/Other</option>
                        </select>
                    </div>
                    <div class="col-md-8">
                        <label for="assignmentname" class="form-label">Assignment Name</label>
                        <input type="text" id="assignmentname" name="assignmentname" class="form-control" placeholder="e.g., Homework 3" required>
                    </div>
                    <div class="col-md-4">
                        <label for="duedate" class="form-label">Due Date</label>
                        <input type="date" id="duedate" name="duedate" class="form-control" required>
                    </div>
                    <div class="col-12 d-flex justify-content-end gap-2">
                        <button type="button" id="cancelAddAssignmentBtn" class="btn btn-outline-secondary">Cancel</button>
                        <button type="submit" class="btn btn-success">Save Assignment</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Filters Card (hidden by default) -->
        <div id="filtersCard" class="card mb-4 mx-auto shadow-sm" style="display: none; max-width: 800px;">
            <div class="card-body">
                <h5 class="card-title">Filters</h5>
                <form action="/filter-code" method="GET" class="mb-3">
                    <label for="classcodefilter" class="form-label">Class Code</label>
                    <select id="classcodefilter" name="classcodefilter" class="form-select mb-2">
                        <option value="IS 401">IS 401</option>
                        <option value="IS 413">IS 413</option>
                        <option value="IS 414">IS 414</option>
                        <option value="IS 455">IS 455</option>
                        <option value="MUSIC 312R">MUSIC 312R</option>
                        <option value="Other">Other</option>
                    </select>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Filter by Class</button>
                    </div>
                </form>
                <form action="/filter-assigntype" method="GET">
                    <label for="assigntypefilter" class="form-label">Assignment Type</label>
                    <select id="assigntypefilter" name="assigntypefilter" class="form-select mb-2">
                        <option value="Homework">Homework</option>
                        <option value="Project">Project</option>
                        <option value="Group">Group</option>
                        <option value="Reading">Reading</option>
                        <option value="Exam">Exam</option>
                        <option value="Personal/Other">Personal/Other</option>
                    </select>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Filter by Type</button>
                    </div>
                </form>
                <div class="d-flex justify-content-between mt-3">
                    <button type="button" id="clearFiltersBtn" class="btn btn-outline-secondary">Clear Filters</button>
                </div>
            </div>
        </div>

        

        <div class="card mx-auto shadow-sm" style="max-width: 1100px;">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered align-middle text-center mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Class Code</th>
                                <th scope="col">Assignment Name</th>
                                <th scope="col">Type</th>
                                <th scope="col">Due Date</th>
                                <th scope="col">Day of the Week</th>
                                <th scope="col">Done</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% schooldata.forEach( (row) => { %>
                                <tr>
                                    <td class="px-3"><%= row.classcode %></td>
                                    <td class="px-3"><%= row.assignmentname %></td>
                                    <td class="px-3"><%= row.assigntype %></td>
                                    <td class="px-3">
                                        <%= row.duedate ? new Date(row.duedate).toLocaleDateString() : '' %>
                                    </td>
                                    <td class="px-3">
                                        <%= row.duedate ? new Date(row.duedate).toLocaleDateString('en-US', { weekday: 'long' }) : '' %>
                                    </td>
                                    <td class="px-3">
                                        <% if (row.assignid) { %>
                                            <form action="/complete" method="POST" class="d-inline-block">
                                                <input type="hidden" name="assignid" value="<%= row.assignid %>">
                                                <input type="checkbox"
                                                    name="done"
                                                    class="complete-checkbox"
                                                    <%= row.done ? 'checked' : '' %>>
                                            </form>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Toggle visibility of the add assignment card
        document.getElementById('showAddAssignmentBtn').addEventListener('click', function() {
            const card = document.getElementById('addAssignmentCard');
            const isHidden = card.style.display === 'none';
            card.style.display = isHidden ? 'block' : 'none';
        });

        // Toggle visibility of the filters card
        document.getElementById('showFiltersBtn').addEventListener('click', function() {
            const card = document.getElementById('filtersCard');
            const isHidden = card.style.display === 'none';
            card.style.display = isHidden ? 'block' : 'none';
        });

        // Cancel button hides the card and resets the form
        document.getElementById('cancelAddAssignmentBtn').addEventListener('click', function() {
            const card = document.getElementById('addAssignmentCard');
            const form = card.querySelector('form');
            form.reset();
            card.style.display = 'none';
        });

        // Handle completing assignments without page reload
        (function() {
            const showAllEl = document.getElementById('showAll');
            const checkboxes = document.querySelectorAll('form[action="/complete"] .complete-checkbox');

            checkboxes.forEach(cb => {
                cb.addEventListener('change', async function(e) {
                    const checkbox = e.currentTarget;
                    const form = checkbox.closest('form');
                    const rowEl = checkbox.closest('tr');
                    const assignIdInput = form.querySelector('input[name="assignid"]');
                    const assignid = assignIdInput ? assignIdInput.value : null;

                    if (!assignid) return; // Safety: no ID, do nothing

                    // Disable while posting to avoid double toggles
                    checkbox.disabled = true;

                    try {
                        const params = new URLSearchParams();
                        params.append('assignid', assignid);

                        const res = await fetch('/complete', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                            body: params.toString(),
                        });

                        // On success, optionally adjust UI based on Show All state
                        if (res.ok) {
                            // If Show All is OFF and this got marked done, remove the row from view
                            if (showAllEl && !showAllEl.checked && checkbox.checked && rowEl) {
                                rowEl.remove();
                            }
                        } else {
                            // Revert visual state on failure
                            checkbox.checked = !checkbox.checked;
                            console.error('Failed to update completion status');
                        }
                    } catch (err) {
                        // Revert visual state on network error
                        checkbox.checked = !checkbox.checked;
                        console.error('Error updating completion:', err);
                    } finally {
                        checkbox.disabled = false;
                    }
                });
            });
        })();

        // Clear filters button: navigate back, preserving Show All state
        (function() {
            const clearBtn = document.getElementById('clearFiltersBtn');
            if (clearBtn) {
                clearBtn.addEventListener('click', function() {
                    const showAllEl = document.getElementById('showAll');
                    const url = (showAllEl && showAllEl.checked) ? '/?showAll=1' : '/';
                    window.location.assign(url);
                });
            }
        })();
    </script>

 </body>
 </html>